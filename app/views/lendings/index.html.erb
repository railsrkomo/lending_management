<p id="notice"><%= notice %></p>

<h1>Lendings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lending at</th>
      <th>Expected return at</th>
      <th>Lender</th>
      <th>Borrower</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lendings.each do |lending| %>
      <tr>
        <td><%= lending.name %></td>
        <td><%= lending.lending_at %></td>
        <td><%= lending.expected_return_at %></td>
        <td><%= lending.lender_id %></td>
        <td><%= lending.borrower_id %></td>
        <td><%= link_to 'Show', lending %></td>
        <td><%= link_to 'Edit', edit_lending_path(lending) %></td>
        <td><%= link_to 'Destroy', lending, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

