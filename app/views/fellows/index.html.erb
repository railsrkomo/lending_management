<h1>Fellows</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>email</th> 
      <th>Reason of</th>
      <th>Relation since</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fellows.each do |fellow| %>
      <tr>
        <td><%= fellow.friend.name %></td>
        <td><%= fellow.friend.email %></td> 
        <td><%= fellow.reason_of %></td>
        <td><%= fellow.relation_since %></td>
        <td><%= link_to 'Show', fellow %></td>
        <td><%= link_to 'Edit', edit_fellow_path(fellow) %></td>
        <td><%= link_to 'Destroy', fellow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

